                    target:
                      entity_id: "{{ extra_lights[0] }}"
              - conditions:
                  - condition: template
                    value_template: "{{ extra_lights|length > 1 }}"
                sequence:
                  - delay:
                      seconds: '{{ delay }}'
                  - service: light.turn_on
                    target:
                      entity_id: "{{ extra_lights[1] }}"
                    data:
                      brightness_pct: 80
                  - delay: '0.06'
                  - service: light.turn_on
                    target:
                      entity_id: "{{ extra_lights[1] }}"
                    data:
                      brightness_pct: 60
                  - delay: '0.06'
                  - service: light.turn_on
                    target:
                      entity_id: "{{ extra_lights[1] }}"
                    data:
                      brightness_pct: 40
                  - delay: '0.06'
                  - service: light.turn_on
